@using OGRENCINOTMVC.Models.Entity
@model PagedList<Tbl_Notlar>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "NotListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <td>NOT ID</td>
            <td>DERS ID</td>
            <td>ÖĞRENCİ ADI</td>
            <td>ÖĞRENCİ SOYADI</td>
            <td>SINAV 1</td>
            <td>SINAV 2</td>
            <td>SINAV 3</td>
            <td>PROJE</td>
            <td>ORTALAMA</td>
            <td>DURUM</td>
            <td>İŞLEMLER</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.NOTID</td>
                <td>@x.Tbl_Dersler.DERSAD</td>
                <td>
                    @x.Tbl_Ogrenci.OGRAD
                </td>
                <td>
                    @x.Tbl_Ogrenci.OGRSOYAD
                </td>
                <td>@x.SINAV1</td>
                <td>@x.SINAV2</td>
                <td>@x.SINAV3</td>
                <td>@x.PROJE</td>
                <td>@x.ORTALAMA</td>
                <td>@x.DURUM</td>
                <td>
                    <div>
                        <a href="/NotListesi/NotGetir/@x.NOTID" class="btn btn-success">Güncelle</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
<a href="/NotListesi/YeniSinav" class="btn btn-primary">Yeni Sınav Ekle</a>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("NotListesi", new { sayfa }))
